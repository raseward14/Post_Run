{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": false
    },
    "include": ["server.ts","routes/api/*","routes/*","models/**/*","controllers/*","config/**/*"]
}